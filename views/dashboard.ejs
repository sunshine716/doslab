<!-- dashboard.ejs -->
<head>
  <!-- Bootstrap Icons -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    rel="stylesheet"
  />
  <style>
    .row-hover:hover {
      background-color: #e0f0ff; /* light blue */
      cursor: pointer; /* optional: makes it feel clickable */
    }
  </style>
</head>
<!-- Parent Flex Container (do NOT include <html>, <head>, etc. here) -->
<div class="d-flex" style="min-height: 100vh">
  <!-- Sidebar -->
  <div class="bg-light border-end p-3" style="width: 250px">
    <h4>Menu</h4>
    <ul class="nav flex-column">
      <li class="nav-item row-hover">
        <a class="nav-link active text-dark text-hover-blue" href="#">
          <i class="bi bi-bag-check-fill me-2"></i> Orders
        </a>
      </li>
      <li class="nav-item row-hover">
        <a class="nav-link text-dark text-hover-blue" href="#">
          <i class="bi bi-person-fill me-2"></i> Profile
        </a>
      </li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="content flex-grow-1 p-4">
    <h2>Data Table</h2>
    <p>This table displays sample data:</p>

    <!-- Search Bar -->
    <form class="mb-3" method="GET" action="/dashboard">
      <div class="input-group w-50">
        <input
          type="text"
          class="form-control"
          placeholder="Search by name or email..."
          name="query"
        />
        <button class="btn btn-primary" type="submit">Search</button>
      </div>
    </form>

    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Joined Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td>Alice</td>
            <td>alice@example.com</td>
            <td>2024-01-15</td>
            <td>Active</td>
          </tr>
          <!-- Add more rows here -->
        </tbody>
        <!-- Pagination UI (static example) -->
      </table>
      <nav aria-label="Static table pagination">
        <ul class="pagination">
          <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
          </li>
          <li class="page-item active">
            <a class="page-link" href="#">1</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="#">2</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="#">3</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Coupon Summary Card -->
    <!-- Coupon Summary Card -->
    <div class="card mb-4 shadow-sm" style="max-width: 600px">
      <div class="card-body">
        <h5 class="card-title mb-3">Order Summary</h5>

        <!-- Order Info -->
        <div class="row">
          <div class="col-6 mb-2">
            <strong>Items:</strong> 122
          </div>
          <div class="col-6 mb-2">
            <strong>Subtotal:</strong> 2772.00
          </div>
          <div class="col-6 mb-2">
            <strong>Discount:</strong>
            <span class="text-danger">-$120</span>
          </div>
          <div class="col-6 mb-2">
            <strong>Total:</strong>
            <span class="text-success fw-bold">244</span>
          </div>
        </div>

        <!-- Coupon Form -->
        <form class="mt-3" method="POST" action="/apply-coupon">
          <div class="input-group">
            <input
              type="text"
              name="couponCode"
              class="form-control"
              placeholder="Enter coupon code..."
              required/>
            <button class="btn btn-outline-primary" type="submit">Apply</button>
          </div>
        </form>

        <div class="mt-2 text-info">
          Coupon applied successfully!
        </div>
      

        <!-- Submit Order Button -->
        <form class="mt-4" method="POST" action="/submit-order">
          <!-- You can pass hidden fields if needed -->
          <input type="hidden" name="total" value="225" />
          <button class="btn btn-success w-100" type="submit">
            <i class="bi bi-check-circle me-1"></i> Submit Order
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
